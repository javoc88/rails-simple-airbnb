
<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>Add a new Flat</h1>
          <div class="mt-3">
            <%= simple_form_for @flat do |f| %>
              <div class="form-group">
                <%= f.input :name %>
              </div>
              <div class="form-group">
                <%= f.input :address %>
              </div>
              <div class="form-group">
                <%= f.input :picture_url %>
              </div>
              <div class="form-group">
                <%= f.input :description %>
              </div>
              <div class="form-group">
                <%= f.input :number_of_guests,  input_html: { min: '1', max: '20' }  %>
              </div>
              <div class="form-group">
                <%= f.input :price_per_night, input_html: { min: '0' } %>
              </div>
              <%= f.submit "Create Flat", class: "btn btn-primary" %>
              <%= f.submit "Cancel", class: "btn btn-danger" %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
